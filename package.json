{
    "name": "surface",
    "displayName": "Surface: A component based library for Phoenix",
    "description": "Syntax highlighting support for Surface/Elixir",
    "version": "0.7.1",
    "author": "Marlus Saraiva",
    "publisher": "msaraiva",
    "license": "MIT",
    "icon": "images/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/msaraiva/vscode-surface.git"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./client/out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/node": "^18",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^7.14.0",
        "@typescript-eslint/parser": "^7.14.0",
        "eslint": "^8.26.0",
        "typescript": "^5.5.2"
    },
    "contributes": {
        "languages": [
            {
                "id": "surface",
                "aliases": [
                    "Surface",
                    "surface"
                ],
                "extensions": [
                    ".sface"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "surface",
                "scopeName": "source.surface",
                "path": "./syntaxes/surface.json"
            },
            {
                "scopeName": "source.elixir.surface",
                "path": "./syntaxes/elixir-surface.json",
                "injectTo": [
                    "source.elixir"
                ],
                "embeddedLanguages": {
                    "text.html.surface": "surface"
                }
            }
        ]
    }
}

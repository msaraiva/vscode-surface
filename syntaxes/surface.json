          "patterns": [
              {
                  "include": "#node-attributes"
              },
              {
                  "contentName": "source.js",
                  "begin": "(>)",
                  "beginCaptures": {
                      "1": {
                          "name": "punctuation.definition.tag.end.html"
                      }
                  },
                  "end": "(?=</script>)",
                  "patterns": [
